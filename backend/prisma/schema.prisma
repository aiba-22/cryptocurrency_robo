datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}


model CryptocurrencyStaticOrder {
  id                   Int      @id @default(autoincrement())
  userId               Int
  symbol               String   @db.VarChar(20)
  targetPrice          Int
  volume               Int
  type                 Int      @db.TinyInt
  isEnabled            Int      @db.TinyInt
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}

model CryptocurrencyAdjustmentOrder {
  id                   Int      @id @default(autoincrement())
  userId               Int
  symbol               String   @db.VarChar(20)
  targetPrice          Int
  isEnabled            Int      @db.TinyInt
  priceAdjustmentRate  Decimal? @db.Decimal(3, 2)
  volumeAdjustmentRate Decimal? @db.Decimal(3, 2)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}


model CryptocurrencyPriceAlert {
  id         Int      @id @default(autoincrement())
  userId     Int
  conditions Json
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model LineAccount {
  id                 Int      @id @default(autoincrement())
  userId             Int
  channelAccessToken String
  lineUserId         String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model GmoAccount {
  id        Int      @id @default(autoincrement())
  userId    Int
  apiKey    String   @db.VarChar(255)
  secretKey String   @db.VarChar(255)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
